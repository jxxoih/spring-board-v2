<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.learning.board_0326.mappers.IBoardMapper">
    <select id="selectArticleCount" resultType="int">
        SELECT COUNT(`board_id`)
        FROM `board`
        WHERE `use_state` > 0;
    </select>

    <select id="selectArticles" resultType="com.learning.board_0326.dtos.ArticleDto">
        SELECT `board_id`,
               `board_title`,
               `board_content`,
               `board_writer`,
               `board_password`,
               `view_count`,
               `use_state`,
               `created_at`
        FROM `board`
        WHERE `use_state` > 0
        ORDER BY `board_id` DESC
            LIMIT #{limit} OFFSET #{offset}
    </select>
</mapper>
